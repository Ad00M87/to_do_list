<h1>Edit <%= @item.title %></h1>

<%= form_for @item do |f| %>

<div>
  <%= f.text_field :title, placeholder: 'What do you need to do?', required: true %>
  <%= f.label :title %>
</div>

<div>
  <%= f.text_field :owner, placeholder: "Who needs to do it?", required: true %>
  <%= f.label :owner %>
</div>

<div>
  <%= f.text_area :description, placeholder: "Details" %>
  <%= f.label :description %>
</div>
<div>
  <%= f.check_box :priority %>
  <%= f.label :priority %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Back to list', items_path %>
